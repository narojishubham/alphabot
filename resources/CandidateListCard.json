{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "HR Bot",
                            "wrap": true,
                            "style": "heading",
                            "spacing": "None",
                            "size": "Medium"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Yesteray",
                            "wrap": true
                        }
                    ],
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "1: 00pm",
                            "wrap": true
                        }
                    ],
                    "verticalContentAlignment": "Center"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "New Candidate for Hire",
            "wrap": true,
            "spacing": "Large",
            "separator": true,
            "size": "Large"
        },
        {
            "type": "TextBlock",
            "text": "Relevant people have been added to this  channel to review hire for David Martinez",
            "wrap": true,
            "isSubtle": true,
            "spacing": "Medium"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "stretch"
                        }
                    ]
                }
            ]
        }
    ]
}