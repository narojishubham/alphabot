{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "HR Bot",
              "wrap": true,
              "style": "heading",
              "size": "Medium"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "backgroundImage": {
            "verticalAlignment": "Bottom"
          },
          "verticalContentAlignment": "Center",
          "items": [
            {
              "type": "TextBlock",
              "text": "12:57 pm",
              "wrap": true,
              "color": "Light"
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "style": "default",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSox-_lyQyhGSn5GX-5BA5MI8gig9D0iAK2aQ&usqp=CAU",
              "size": "Medium"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "One Last Step...",
              "wrap": true
            }
          ],
          "verticalContentAlignment": "Center",
          "horizontalAlignment": "Left"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Let's Create David's Welcome email!",
      "wrap": true
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Submit",
          "title": "Let's welcome David"
        }
      ]
    }
  ]
}
