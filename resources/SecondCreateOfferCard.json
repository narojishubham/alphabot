{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "HR Bot",
              "wrap": true,
              "size": "Medium",
              "weight": "Bolder"
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "12:30 Pm",
              "wrap": true
            }
          ],
          "backgroundImage": {
            "verticalAlignment": "Bottom"
          },
          "verticalContentAlignment": "Center"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Create Offer",
      "wrap": true,
      "spacing": "Medium",
      "size": "ExtraLarge",
      "weight": "Bolder",
      "separator": true
    },
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "wrap": true,
                  "text": "Compensation Guide",
                  "size": "Medium",
                  "weight": "Bolder"
                },
                {
                  "type": "ColumnSet",
                  "columns": [
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "Position:  ",
                          "wrap": true,
                          "weight": "Bolder"
                        }
                      ]
                    },
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "Senior Engineer",
                          "wrap": true,
                          "isSubtle": true
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "ColumnSet",
                  "columns": [
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "Persona:",
                          "wrap": true,
                          "weight": "Bolder"
                        }
                      ]
                    },
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "Developer",
                          "wrap": true,
                          "isSubtle": true
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "ColumnSet",
                  "columns": [
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "Location:  ",
                          "wrap": true,
                          "weight": "Bolder"
                        }
                      ]
                    },
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "Caperitino HQ",
                          "wrap": true,
                          "isSubtle": true
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "ColumnSet",
                  "columns": [
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "Level:  ",
                          "wrap": true,
                          "weight": "Bolder"
                        }
                      ]
                    },
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "26",
                          "wrap": true,
                          "isSubtle": true
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "ColumnSet",
                  "columns": [
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "Level Salary:",
                          "wrap": true,
                          "weight": "Bolder"
                        }
                      ]
                    },
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "TextBlock",
                          "wrap": true,
                          "isSubtle": true,
                          "text": "$100k - $150k"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "ColumnSet",
                  "columns": [
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "Stock Options:",
                          "wrap": true,
                          "weight": "Bolder"
                        }
                      ]
                    },
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "5000 - 7000",
                          "wrap": true,
                          "isSubtle": true
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch"
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Offer Form",
      "wrap": true,
      "size": "Medium",
      "weight": "Bolder",
      "spacing": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "Fill out the offer based on the above compensation guide.",
      "wrap": true,
      "isSubtle": true,
      "spacing": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "Salary",
      "wrap": true,
      "spacing": "Medium",
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "Input.ChoiceSet",
      "choices": [
        {
          "title": "$100,000",
          "value": "Choice 1"
        },
        {
          "title": "$120,000",
          "value": "Choice 2"
        },
        {
          "title": "$150,000",
          "value": "Choice 3"
        }
      ],
      "placeholder": "Select salary"
    },
    {
      "type": "TextBlock",
      "text": "Salary range for level 26 Developer",
      "wrap": true,
      "isSubtle": true,
      "spacing": "Small"
    },
    {
      "type": "TextBlock",
      "text": "Stock Options",
      "wrap": true,
      "spacing": "Medium",
      "size": "Medium",
      "weight": "Bolder"
    },
    {
      "type": "Input.ChoiceSet",
      "choices": [
        {
          "title": "5000",
          "value": "s5000"
        },
        {
          "title": "6000",
          "value": "s6000"
        },
        {
          "title": "7000",
          "value": "s7000"
        }
      ],
      "placeholder": "Select stock"
    },
    {
      "type": "TextBlock",
      "text": "Stock option to receive (5000-7000)",
      "wrap": true,
      "spacing": "Small",
      "isSubtle": true
    },
    {
      "type": "TextBlock",
      "text": "Start Date",
      "wrap": true,
      "size": "Medium",
      "weight": "Bolder",
      "spacing": "Medium"
    },
    {
      "type": "Input.Date"
    },
    {
      "type": "TextBlock",
      "text": "Start date of the new hire",
      "wrap": true,
      "spacing": "Small",
      "isSubtle": true
    },
    {
      "type": "TextBlock",
      "text": "Additional Comments (Optional)",
      "wrap": true,
      "spacing": "Medium"
    },
    {
      "type": "Input.Text",
      "placeholder": "Welcome!",
      "isMultiline": true
    },
    {
      "type": "TextBlock",
      "text": "Enter any additional comments on hire.",
      "wrap": true,
      "spacing": "Small",
      "isSubtle": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "Confirm"
                }
              ]
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "Cancel Offer"
                }
              ]
            }
          ]
        }
      ],
      "spacing": "Medium"
    }
  ]
}
