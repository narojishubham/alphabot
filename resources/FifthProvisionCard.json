{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "HR Bot",
              "wrap": true,
              "size": "Medium",
              "weight": "Bolder"
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "12:30 Pm",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Provision Equipment",
      "wrap": true,
      "spacing": "Medium",
      "size": "Large",
      "weight": "Bolder",
      "separator": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "Select the equipment that you'd like to provision for Sarah Smith",
              "wrap": true
            },
            {
              "type": "Input.Toggle",
              "title": "Dell Inspiron Laptop 14 inch",
              "id": "11a11a"
            },
            {
              "type": "Input.Toggle",
              "title": "Samsung Galaxy S20",
              "id": "11b11b"
            },
            {
              "type": "Input.Toggle",
              "title": "Office Key",
              "id": "11c11c"
            },
            {
              "type": "Input.Toggle",
              "title": "Apple Mackbook Pro 13 inch",
              "id": "11d11d"
            },
            {
              "type": "Input.Toggle",
              "title": "LG 22 inch Widescreen Monitor",
              "id": "11e11e"
            },
            {
              "type": "Input.Toggle",
              "title": "Apple iPhone 12",
              "id": "11f11f"
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "data:image/png;base64,",
              "width": "100px"
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "Submit",
                  "data": {
                    "card": "let's welcome Sarah"
                  },
                  "associatedInputs": "none"
                }
              ]
            }
          ],
          "minHeight": "1px"
        }
      ],
      "spacing": "Medium"
    }
  ]
}
