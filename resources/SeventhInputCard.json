{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "https://uk-prod.asyncgw.teams.microsoft.com/v1/objects/0-suk-d2-e6ebee3b73007b3cf1d326400ac4b718/views/imgpsh_fullsize",
              "size": "Small",
              "width": "50px"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "HR Bot",
              "wrap": true,
              "weight": "Bolder",
              "size": "Medium"
            },
            {
              "type": "TextBlock",
              "text": "Let's Welcome Sarah Smith!",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Please fill all the fields in the form",
      "wrap": true,
      "spacing": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "Arrival Time",
      "wrap": true,
      "spacing": "Medium",
      "size": "Medium",
      "weight": "Bolder"
    },
    {
      "type": "Input.Text",
      "id": "123a",
      "placeholder": "10:00AM"
    },
    {
      "type": "TextBlock",
      "text": "Office Manager",
      "wrap": true,
      "size": "Medium",
      "weight": "Bolder",
      "spacing": "Medium"
    },
    {
      "type": "Input.Text",
      "id": "123b"
    },
    {
      "type": "TextBlock",
      "text": "Arrival Day",
      "wrap": true,
      "spacing": "Medium",
      "size": "Medium",
      "weight": "Bolder"
    },
    {
      "type": "Input.Date",
      "id": "123c"
    },
    {
      "type": "TextBlock",
      "text": "Comments",
      "wrap": true,
      "size": "Medium",
      "weight": "Bolder",
      "spacing": "Medium"
    },
    {
      "type": "Input.Text",
      "id": "123d"
    },
    {
      "type": "TextBlock",
      "text": "Comments will appear after PS.",
      "wrap": true,
      "isSubtle": true,
      "spacing": "Small"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "Cancel",
                  "data": {
                    "data": "Email is not sent"
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "Submit",
                  "data": {
                    "card": "Email sent"
                  }
                }
              ]
            }
          ]
        }
      ],
      "horizontalAlignment": "Right"
    }
  ]
}
